bind 0.0.0.0
port <%= @port %>
requirepass <%= @password %>
daemonize no
protected-mode yes
dir <%= @data_dir %>
logfile <%= @log_file %>
pidfile <%= @pid_file %>
tcp-backlog 511
timeout 0
tcp-keepalive 300
save 900 1
save 300 10
save 60 10000
dbfilename dump.rdb
appendonly yes
appendfilename "appendonly.aof"
<% if @is_cluster && !@is_master_here && @master_host %>
replicaof <%= @master_host %> <%= @port %>
<% end %>
